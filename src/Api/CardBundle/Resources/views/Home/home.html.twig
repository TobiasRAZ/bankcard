{% extends 'ApiCardBundle::base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1><span>Welcome to</span> Bank Card API </h1>
            </div>

            <div id="next">
               <h2>&copy; By Eqima</h2>
            </div>

            <div id="next">
                <!-- <h2>Get started</h2> -->
                <p>
                    See the list of possible resources
                    <a href="{{ path('api_card') }}">
                        How to use this API
                    </a>
                </p>
                <p>
                    Get started
                    <a href="{{ path('api_card') }}">
                        Create your API Key
                    </a>
                </p>
            </div>

        </div>
    </div>
 
{% endblock %}
    
{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
    h1, h2 { line-height: 1.2; margin: 0 0 .5em; color: #3D6889; }
    h1 { font-size: 36px; }
    h2 { font-size: 21px; margin-bottom: 1em; }
    p { margin: 0 0 1em 0; }
    a { color: #73D0F4;; }
    a:hover { text-decoration: none; }
    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    #wrapper { background: #E5F7F9; margin: 1em auto; max-width: 800px; width: 95%;border-radius: 10px;box-shadow: 2px 4px #888888; }
    #container { padding: 2em; }
    #welcome, #status { margin-bottom: 2em; }
    #welcome h1 span { display: block; font-size: 75%; color: #3D6889 !important; }
    #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
    #icon-book { display: none; }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }
        #icon-book { display: inline-block; }
        #status a, #next a { display: block; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }
</style>
{% endblock %}
